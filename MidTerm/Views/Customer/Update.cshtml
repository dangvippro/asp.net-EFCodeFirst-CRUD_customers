
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}

<div class="modal" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Update Customer</h4>
                    <a href="/" role="button" class="close a-reset fs-3">&times;</a>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-2">
                        <label for="">ID</label>
                        <input type="text" class="form-control" name="id" required value="@Model.id" disabled>
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Fullname</label>
                        <input type="text" class="form-control" name="fullname" required value="@Model.fullname">
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Birthday</label>
                        <input type="date" class="form-control" name="birthday" required value='@Model.birthday.ToString("yyyy-MM-dd")'>
                        
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Gender</label> <br>
                        <input type="radio" class="ms-2" name="gender" value="male" @((Model.gender == "male")? "checked": "")> Male
                        <input type="radio" class="ms-2" name="gender" value="female" @((Model.gender == "female")? "checked": "")> Female
                        <input type="radio" class="ms-2" name="gender" value="other" @((Model.gender == "other")? "checked": "")> Other
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Email</label>
                        <input type="email" class="form-control" name="email" required value="@Model.email">
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Phone</label>
                        <input type="text" class="form-control" name="phone" required value="@Model.phone">
                    </div>
                    <div class="form-group mb-2">
                        <label for="">Address</label>
                        <input type="text" class="form-control" name="address" required value="@Model.address">
                    </div>
                </div>

                <div class="modal-footer">
                    <a href="/" class="btn btn-default" role="button">Cancel</a>
                    <input type="submit" class="btn btn-success" value="Update">
                </div>    
            </form>
        </div>
    </div>
</div>