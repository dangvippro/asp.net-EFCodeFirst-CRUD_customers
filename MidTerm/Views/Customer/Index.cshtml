
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Manage <b>Customers</b></h2>
                    </div>
                    <div class="col-md-6 text-end" >
                        <a href="/Customer/Create" role="button" class="btn btn-success">Add New Customer</a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fullname</th>
                        <th>Birthday</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.fullname</td>
                            <td>@item.birthday.ToString("dd-MM-yyyy")</td>
                            <td>@item.gender</td>
                            <td>@item.email</td>
                            <td>@item.phone</td>
                            <td>@item.address</td>
                            <td>
                                <a href="/Customer/Update/@item.id" class="a-reset text-primary me-2">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a href="/Customer/Delete/@item.id" class="a-reset text-danger" onclick="return confirm('Do you want to delete this customer id: @item.id?')"> 
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>